@model PaymentTypeViewModel

@{
    ViewData["Title"] = $"{Model.Name}";
}

<h2>This is @Model.Name</h2>

<div class="card" style="width:18rem">
    <div class="card-header">@ViewBag.Title</div>
    <ul class="list-group list-group-flush">
        @foreach (var payment in Model.CurrentPayments)
        {
            <li class="list-group-item">
                N.@payment.Id: @payment.Name
            </li>
        }
    </ul>
</div>
<a asp-controller="Payments" asp-action="AddCurrentPayment" asp-route-id=@Model.Id>Add Payment</a>
