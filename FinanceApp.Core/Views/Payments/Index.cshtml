@model IEnumerable<PaymentTypeViewModel>
@{
    ViewData["Title"] = "Payment Types";
}

<h1>Payment types</h1>

<div class="card" style="width:18rem">
    <div class="card-header">@ViewBag.Title</div>
    <ul class="list-group list-group-flush">
        @foreach (var product in Model)
        {
            <li class="list-group-item">
                N.@product.Id: @product.Name
            </li>
        }
    </ul>

</div>
<a asp-controller="Payments" asp-action="AddPaymentType">Add Payment type</a>